{
  "version": 2,

  "installCommand": "npm --prefix client install && npm --prefix api install",

  "buildCommand":   "npm --prefix client run build",

  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],

  "routes": [

    { "handle": "filesystem" },

    { "src": "/api/(.*)", "dest": "/api/index.js" },


    { "src": "/(.*)",      "dest": "/client/build/index.html" }
  ]
}